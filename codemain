// // // Keyboard shortcuts
// // let spaceCount = 0;
// // let lastSpaceTime = 0;
// // let isWaitingForAction = false;
// // const SPACE_TIMEOUT = 800;
// // const ACTION_TIMEOUT = 1500;
// // let keyboardListener = null;

// // function resetSpaceSequence() {
// //   spaceCount = 0;
// //   isWaitingForAction = false;
// //   lastSpaceTime = 0;
// // }

// // function setupKeyboardHook() {
// //   keyboardListener = new GlobalKeyboardListener();
  
// //   console.log('\nâŒ¨ï¸  Global Shortcuts:');
// //   console.log('  Space+Space+Space+A - Toggle Window');
// //   console.log('  Space+Space+Space+S - Screenshot');
// //   console.log('  Space+Space+Space+O - OCR');
// //   console.log('  Space+Space+Space+V - Voice Record');
// //   console.log('  Space+Space+Space+R - Quick Repair\n');
  
// //   keyboardListener.addListener(function (e, down) {
// //     if (e.state !== "DOWN") return;
    
// //     const now = Date.now();
// //     const keyName = e.name.toUpperCase();
    
// //     if (keyName === "SPACE") {
// //       if (now - lastSpaceTime > SPACE_TIMEOUT || isWaitingForAction) {
// //         resetSpaceSequence();
// //       }
      
// //       spaceCount++;
// //       lastSpaceTime = now;
      
// //       if (spaceCount === 3) {
// //         isWaitingForAction = true;
// //         setTimeout(() => {
// //           if (isWaitingForAction) resetSpaceSequence();
// //         }, ACTION_TIMEOUT);
// //       }
// //     }
// //     else if (isWaitingForAction) {
// //       if (keyName === "A") {
// //         toggleWindow();
// //       } else if (keyName === "S") {
// //         if (mainWindow) {
// //           mainWindow.webContents.send('trigger-screenshot');
// //           if (!isWindowVisible) {
// //             mainWindow.show();
// //             isWindowVisible = true;
// //           }
// //         }
// //       } else if (keyName === "V") {
// //         if (mainWindow) {
// //           mainWindow.webContents.send('trigger-voice-record');
// //           if (!isWindowVisible) {
// //             mainWindow.show();
// //             isWindowVisible = true;
// //           }
// //         }
// //       } else if (keyName === "O") {
// //         if (mainWindow) {
// //           mainWindow.webContents.send('trigger-ocr');
// //           if (!isWindowVisible) {
// //             mainWindow.show();
// //             isWindowVisible = true;
// //           }
// //         }
// //       } else if (keyName === "R") {
// //         if (antiFocus && mainWindow) {
// //           console.log('ðŸ”§ Quick repair triggered');
// //           antiFocus.quickRepair(mainWindow).then(() => {
// //             console.log('âœ… Repair done');
// //             createTray();
// //           });
// //         }
// //       }
// //       resetSpaceSequence();
// //     } else if (spaceCount > 0) {
// //       resetSpaceSequence();
// //     }
// //   });
// // }

